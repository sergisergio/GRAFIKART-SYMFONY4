{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <div class="jumbotron text-center">
        <h1>Agence Philippe</h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci, aliquam autem deleniti dolore eaque error esse fugiat natus nulla omnis perferendis provident quae quibusdam, quisquam sequi tempora ut vero voluptatem!
        </p>
    </div>
    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property_show', {slug: property.slug, id:property.id }) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                            <div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.formattedPrice }} euros</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
