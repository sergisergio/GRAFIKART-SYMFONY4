<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" class="card-img-top img-fluid " alt="" style="width: 1000%; height:auto;">
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" alt="" class="card-img-top img-fluid">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property_show', {slug: property.slug, id: property.id }) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">
            {{ property.surface }} m2 - {{ property.city }} ({{ property.postalCode }})
            <span class="text-primary" style="font-size: 2rem; font-weight: bold;">
                {{ property.formattedPrice }}
            </span>
        </p>
    </div>
</div>